<%- include('../partial/boiler') %>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-purple-50 to-indigo-50 flex flex-col">
  <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Hero Section -->
  <main class="max-w-4xl mx-auto mt-20 px-8 py-12 bg-white/90 backdrop-blur-md rounded-3xl shadow-2xl text-center border border-gray-100">
    <h1 class="text-4xl font-extrabold text-purple-800 mb-4 tracking-tight animate-pulse">
      Welcome to Our Home Listings
    </h1>
    <p class="text-lg text-gray-600 mb-6">
      Browse homes and rooms available for tourists and travelers. Click for details or add to favourites!
    </p>
  </main>

  <!-- Cards Section -->
  <section class="max-w-6xl mx-auto flex flex-wrap justify-center gap-8 mt-12 p-6">
    <% RegisterHome.forEach(house => { %>
      <div class="w-full sm:w-72 bg-white/80 backdrop-blur-md rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl hover:-translate-y-2 transform transition duration-300 border border-gray-200">
        
        <!-- Card Image -->
        <img
          class="w-full h-48 object-cover rounded-t-3xl"
          src="<%= house.image || '/image/image.webp' %>"
          alt="<%= house.name %>"
        >

        <div class="p-5 flex flex-col justify-between">
          <!-- Name -->
          <h2 class="text-xl font-semibold text-gray-800 mb-1 truncate">
            <%= house.name %>
          </h2>

          <!-- Address -->
          <p class="text-sm text-gray-500 mb-3 truncate">
            <%= house.address %>
          </p>

          <!-- Rating -->
          <div class="flex items-center mb-3">
            <div class="flex text-yellow-400 mr-2">
              <% for(let i = 0; i < house.rating; i++) { %>
                <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09L5.24 12.545 1 8.91l6.06-.882L10 2.5l2.94 5.528 6.06.882-4.24 3.635 1.118 5.545z"/>
                </svg>
              <% } %>
            </div>
            <span class="text-sm text-gray-600 font-medium">
              <%= house.rating %> / 5
            </span>
          </div>

          <!-- Cost -->
          <p class="text-lg font-bold text-purple-700 mb-4">
            $<%= house.cost %> <span class="text-sm text-gray-500 font-medium">/ night</span>
          </p>

          <!-- Buttons -->
          <div class="flex flex-col gap-3">
            <!-- Details Button -->
            <a href="/Home/<%= house._id %>" 
               class="w-full bg-gradient-to-r from-blue-500 to-purple-600 hover:from-purple-600 hover:to-blue-500 text-white py-3 rounded-2xl font-semibold shadow-lg transition transform hover:scale-[1.03] text-center">
              View Details
            </a>

            <!-- Add to Favourite -->
            <%- include('../partial/favourite', {house: house}) %>
          </div>
        </div>
      </div>
    <% }) %>
  </section>
</body>
</html>
