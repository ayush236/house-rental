<%- include('../partial/boiler') %>
<body class="min-h-screen bg-gradient-to-r from-blue-100 to-purple-200 flex flex-col">
  <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Hero Section -->
  <main class="max-w-4xl mx-auto mt-20 p-10 bg-white rounded-3xl shadow-xl text-center">
    <h1 class="text-4xl font-extrabold text-purple-800 mb-4">
     FAVOURITE LIST
    </h1>
    <p class="text-lg text-gray-600 mb-6">
      This is the site were you can see your favourite.
    </p>
  </main>

  <!-- Cards Section -->
<section class="max-w-6xl mx-auto flex flex-wrap justify-center gap-8 mt-12 p-6">
    <% favouritehouse.forEach(house => { %>
  
      <div class="w-full sm:w-72 bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300">
        <!-- Card Image -->
        <img
          class="w-full h-48 object-cover"
          src="<%= house.image %>"
          alt="<%= house.name %>"
        >

        <div class="p-5">
          <!-- Name -->
          <h2 class="text-xl font-bold text-gray-800 mb-1">
            <%= house.name %>
          </h2>

          <!-- Address -->
          <p class="text-sm text-gray-500 mb-3">
            <%= house.address %>
          </p>

          <!-- Rating -->
          <div class="flex items-center mb-3">
            <div class="flex text-yellow-400 mr-2">
              <% for(let i = 0; i < 4; i++) { %>
                <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09L5.24 12.545 1 8.91l6.06-.882L10 2.5l2.94 5.528 6.06.882-4.24 3.635 1.118 5.545z"/>
                </svg>
              <% } %>
            </div>
            <span class="text-sm text-gray-600">
              <%= house.rating %>
            </span>
          </div>

          <!-- Cost -->
          <p class="text-lg font-bold text-purple-700 mb-4">
            $<%= house.cost %>
          </p>

          <!-- remove favourite house-->
           <form action="/favourite/delete/<%= house.id%>" method="POST">
          <button type="submit" class=" w-24 bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition">
            Remove 
          </button>
          </form>

        </div>
      </div>
    <% }) %>

  </section>
</body>
</html>
