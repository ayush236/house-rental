<%- include('../partial/boiler') %>
<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-purple-50 to-blue-50 flex flex-col">
  <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Hero Section -->
  <main class="max-w-4xl mx-auto mt-24 px-8 py-12 bg-white/80 backdrop-blur-md rounded-3xl shadow-2xl text-center border border-gray-100">
    <h1 class="text-4xl font-extrabold text-purple-800 mb-4 tracking-tight animate-pulse">
      My Favourite Homes
    </h1>
    <p class="text-lg text-gray-600">
      Browse the homes you've added to your favourites. Manage your list with ease.
    </p>
  </main>

  <!-- Cards Section -->
  <section class="max-w-6xl mx-auto flex flex-wrap justify-center gap-10 mt-14 px-6 pb-16">
    <% favouritehouse.forEach(house => { %>
      <div class="w-full sm:w-72 bg-white/80 backdrop-blur-md rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl hover:-translate-y-2 transform transition duration-300 border border-gray-200">
        
        <!-- Card Image -->
        <img
          class="w-full h-52 object-cover rounded-t-3xl"
          src="<%= house.image || '/image/image.webp' %>"
          alt="<%= house.name %>"
        >

        <div class="p-6">
          <!-- Name -->
          <h2 class="text-xl font-semibold text-gray-900 mb-2 truncate">
            <%= house.name %>
          </h2>

          <!-- Address -->
          <p class="text-sm text-gray-500 mb-4 truncate">
            <%= house.address %>
          </p>

          <!-- Rating -->
          <div class="flex items-center mb-4">
            <div class="flex text-yellow-400 mr-2">
              <% for(let i = 0; i < house.rating; i++) { %>
                <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09L5.24 12.545 1 8.91l6.06-.882L10 2.5l2.94 5.528 6.06.882-4.24 3.635 1.118 5.545z"/>
                </svg>
              <% } %>
            </div>
            <span class="text-sm text-gray-600 font-medium">
              <%= house.rating %> / 5
            </span>
          </div>

          <!-- Cost -->
          <p class="text-lg font-bold text-purple-700 mb-6">
            $<%= house.cost %> <span class="text-sm text-gray-500 font-medium">/ night</span>
          </p>

          <!-- Remove Favourite Button -->
          <form action="/favourite/delete/<%= house._id %>" method="POST">
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-pink-500 hover:to-red-600 
                     text-white py-3 rounded-2xl font-semibold shadow-lg transition transform hover:scale-[1.03] focus:outline-none focus:ring-4 focus:ring-pink-300"
            >
              Remove from Favourites
            </button>
          </form>
        </div>
      </div>
    <% }) %>
  </section>
</body>
</html>
