<%- include('../partial/boiler') %>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-purple-50 to-indigo-50 flex flex-col">
  <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Hero Section -->
  <main class="max-w-4xl mx-auto mt-24 px-8 py-12 bg-white/90 backdrop-blur-md rounded-3xl shadow-2xl text-center border border-gray-100">
    <h1 class="text-5xl font-extrabold text-purple-800 mb-4 tracking-wide animate-pulse">
      House Details
    </h1>
    <p class="text-lg text-gray-600 mb-6">
      Explore all the information about this property, including amenities, cost, and more.
    </p>
  </main>

  <!-- Card Section -->
  <section class="max-w-4xl mx-auto flex flex-col sm:flex-row gap-8 mt-12 p-6">
    
    <!-- Image -->
    <div class="sm:w-1/2 rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition transform hover:scale-[1.03]">
      <img
        class="w-full h-80 sm:h-full object-cover"
        src="<%= house.image || '/image/image.webp' %>"
        alt="<%= house.name %>"
      >
    </div>

    <!-- Details -->
    <div class="sm:w-1/2 bg-white/90 backdrop-blur-md rounded-3xl shadow-2xl p-6 flex flex-col justify-between">
      
      <!-- Name -->
      <h2 class="text-3xl font-extrabold text-gray-800 mb-3 truncate">
        <%= house.name %>
      </h2>

      <!-- Address -->
      <p class="text-gray-500 text-sm mb-4 italic">
        üìç <%= house.address %>
      </p>

      <!-- Rating -->
      <div class="flex items-center mb-4">
        <div class="flex text-yellow-400 mr-3">
          <% for(let i = 0; i < house.rating; i++) { %>
            <svg class="w-6 h-6 fill-current" viewBox="0 0 20 20">
              <path d="M10 15l-5.878 3.09L5.24 12.545 1 8.91l6.06-.882L10 2.5l2.94 5.528 6.06.882-4.24 3.635 1.118 5.545z"/>
            </svg>
          <% } %>
        </div>
        <span class="text-gray-700 font-medium text-sm">
          <%= house.rating %> / 5
        </span>
      </div>

      <!-- Cost -->
      <p class="text-2xl font-bold text-purple-700 mb-6">
        $<%= house.cost %> <span class="text-gray-500 text-base font-medium">/ night</span>
      </p>

      <!-- Description Section -->
      <div class="bg-white/70 backdrop-blur-sm p-5 rounded-2xl shadow-inner border border-gray-200 mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Description</h3>
        <p class="text-gray-600 text-sm leading-relaxed">
          <%= house.description %>
        </p>
      </div>

      <!-- Favourite / Booking Button -->
      <div class="mb-6">
        <%- include('../partial/favourite', {house: house}) %>
      </div>

    </div>
  </section>
</body>
</html>
