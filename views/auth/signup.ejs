<%- include('../partial/boiler') %>
  
<body class="min-h-screen bg-gradient-to-r from-blue-100 to-purple-200 flex items-center justify-center p-4">
    <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Big Card Container -->
  <div class="max-w-5xl w-full bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row">

    <!-- Left: Login Form -->
    <div class="md:w-1/2 p-10 flex flex-col justify-center bg-white">
      <h1 class="text-3xl font-extrabold text-gray-900 mb-4 text-center">welcome,find a wonderful Experience!</h1>
      <p class="text-gray-600 text-center mb-8">sign up to manage and find the house</p>

      
      
      <form action="/signup" method="POST" class="space-y-6">

        <%- include('../partial/errorsmsg') %>

        <!-- Firstname -->
        <div>
          <label for="First Name" class="block text-sm font-semibold text-gray-700 mb-2">First Name</label>
          <input type="text" id="Firstname" name="Firstname" placeholder="Enter your Firstname"
          value="<%= typeof oldInput !=='undefined'? oldInput.Firstname : ''  %>"
          required
            class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>

        <!-- Lastname -->
        <div>
          <label for="Lastname" class="block text-sm font-semibold text-gray-700 mb-2">Last Name</label>
          <input type="text" id="Lastname" name="Lastname" placeholder="Enter your Lastname" 
          value="<%= typeof oldInput !== 'undefined'? oldInput.Lastname : '' %>"
          required
            class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>

        <!-- Email -->
        <div>
          <label for="Email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
          <input type="text" id="email" name="Email" placeholder="Enter your email" 
          value="<%= typeof oldInput !== 'undefined' ? oldInput.Email : '' %>"
          required
            class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>


        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" 
        
          required
            class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>

         <!-- conform password -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Conform Password</label>
          <input type="password" id="password" name="Conform_password" placeholder="Conform your password" 
          
          required
            class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition" />
        </div>


        <!-- select the user_type -->
        <div class="flex gap-3">
          <label for="userType" class="font-bold">User Type:</label><br>
        <div>
          <label for="user_Type">Guest</label>
          <input type="radio" id="radio" name="userType" value="Guest"  
          checked="<%=typeof oldInput !=='undefined' ? oldInput.userType : '' %>"
          />
        </div>
        <div>
          <label for="user Type">Host</label>
          <input type="radio" id="radio" name="userType" value="Host"
          checked="<%=typeof oldInput !=='undefined' ? oldInput.us : ''%>"
          
          />
        </div>
        </div>


        <!-- term and condition -->
         <div class="flex gap-3">
        <div>
          <input type="checkbox" id="radio" name="condition" value= true required />
          <label for="condition" class="font-bold">I agree the terms and conditions,</label>
        </div>
        </div>

        <!-- SignUp Button -->
        <button type="submit"
          class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 rounded-xl shadow-lg transition transform hover:scale-[1.02] focus:outline-none focus:ring-4 focus:ring-indigo-300">
          Sign up
        </button>

      </form>
    </div>

    <!-- Right: Animated Theme -->
    <div class="md:w-1/2 relative bg-indigo-50 flex items-center justify-center overflow-hidden p-6">
      <!-- Animated gradient blobs -->
      <div class="absolute w-72 h-72 bg-purple-400 rounded-full opacity-70 animate-blob top-0 left-10"></div>
      <div class="absolute w-56 h-56 bg-indigo-300 rounded-full opacity-60 animate-blob animation-delay-2000 bottom-10 right-10"></div>
      <div class="absolute w-64 h-64 bg-pink-300 rounded-full opacity-50 animate-blob animation-delay-4000 top-1/4 right-20"></div>

      <!-- Optional: Text or SVG -->
      <div class="relative z-10 text-center">
        <h2 class="text-2xl font-bold text-purple-700 mb-2">Discover Your Perfect Home For Party</h2>
        <p class="text-gray-600 max-w-xs mx-auto">Experience the best listings, find favorites, and explore unique stays around the world.</p>
      </div>
    </div>

  </div>

  <!-- Animations -->
  <style>
    @keyframes blob {
      0%, 100% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -20px) scale(1.1); }
      66% { transform: translate(-20px, 30px) scale(0.9); }
    }
    .animate-blob { animation: blob 8s infinite ease-in-out; }
    .animation-delay-2000 { animation-delay: 2s; }
    .animation-delay-4000 { animation-delay: 4s; }
  </style>
  </body>
    
  </html>