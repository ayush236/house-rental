<%- include('../partial/boiler') %>
<body class="min-h-screen bg-gradient-to-br from-indigo-100 via-white to-indigo-50">
  <!-- Navbar -->
  <%- include('../partial/nav') %>

  <!-- Hero Section -->
   <div class="h-10"></div>
  <header class="text-center mt-16">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-3 tracking-tight">
      <%= editing ? "Edit Your Listing" : "Host Your Home" %>
    </h1>
    <p class="text-gray-600 max-w-lg mx-auto">
      Fill out the details below to <%= editing ? "update your property" : "add a new property" %> and share it with guests.
    </p>
  </header>

  <!-- Main Content -->
  <main class="max-w-2xl mx-auto mt-10 p-10 bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-gray-200">
    <form action="/<%= editing ? 'edit-home' : 'submit-home' %>" method="POST" class="space-y-6">
      <!-- Hidden ID -->
      <input type="hidden" name="id" value="<%= editing ? house._id : '' %>" />

      <!-- Image -->
      <div>
        <label for="image" class="block text-sm font-semibold text-gray-700 mb-2">ğŸï¸ Cover Image</label>
        <input 
          type="text" 
          id="image" 
          name="image" 
          value="<%= editing ? house.image : '' %>" 
          placeholder="Paste image URL here"
          class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
        />
      </div>

      <!-- Name -->
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">ğŸ¡ Property Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="<%= editing ? house.name : '' %>" 
          placeholder="e.g. Cozy Mountain Retreat"
          class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
        />
      </div>

      <!-- Address -->
      <div>
        <label for="address" class="block text-sm font-semibold text-gray-700 mb-2">ğŸ“ Location</label>
        <input 
          type="text" 
          id="address" 
          name="address" 
          value="<%= editing ? house.address : '' %>" 
          placeholder="Enter full address"
          class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
        />
      </div>

      <!-- Rating & Cost -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="rating" class="block text-sm font-semibold text-gray-700 mb-2">â­ Rating</label>
          <input 
            type="number" 
            id="rating" 
            name="rating" 
            value="<%= editing ? house.rating : '' %>" 
            min="1" max="5"
            placeholder="1â€“5"
            class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
          />
        </div>

        <div>
          <label for="cost" class="block text-sm font-semibold text-gray-700 mb-2">ğŸ’° Price (per night)</label>
          <input 
            type="number" 
            id="cost" 
            name="cost" 
            value="<%= editing ? house.cost : '' %>" 
            placeholder="Enter amount in USD"
            class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
          />
        </div>
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">ğŸ“ Description</label>
        <textarea 
          id="description" 
          name="description" 
          rows="4" 
          placeholder="Tell guests what makes this place special..."
          class="w-full border border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition resize-none"
        ><%= editing ? house.description : '' %></textarea>
      </div>

      <!-- Submit Button -->
      <div>
        <button 
          type="submit"
          class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 rounded-xl shadow-lg transition transform hover:scale-[1.02] focus:outline-none focus:ring-4 focus:ring-indigo-300"
        >
          <%= editing ? "ğŸ’¾ Save Changes" : "â• Add Listing" %>
        </button>
      </div>
    </form>
  </main>
</body>
</html>
